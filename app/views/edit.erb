    <form action="/articles/<%= @article.id %>" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <p><label for="title">Article Title:</label>
        <input id="title" type="text" name="article[title]" value="<%= @article.title %>"></p>
   
        <p><label for="content">Please write your article here:</label>
        <input id="content" type="text" name="article[content]" value="<%= @article.content %>"></p>
       
        <input type="submit" value="Submit">
    </form>